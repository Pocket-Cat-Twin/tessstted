# ================================
# YuYu Lolita Shopping System
# Environment Configuration Template
# ================================

# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ================================
# APPLICATION SETTINGS
# ================================

# Environment (development, staging, production)
NODE_ENV=development

# Application URL and ports
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
API_PORT=3001
API_HOST=localhost
WEB_PORT=3000

# CORS settings (comma-separated origins)
CORS_ORIGIN=http://localhost:5173
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ================================
# DATABASE CONFIGURATION
# ================================

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/yuyu_lolita
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=yuyu_lolita

# Database SSL (for production)
DB_SSL=false

# ================================
# AUTHENTICATION & SECURITY
# ================================

# JWT Secret (generate a strong random key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session settings
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=604800000

# Password hashing rounds (12 is recommended for production)
BCRYPT_ROUNDS=12

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# EMAIL CONFIGURATION
# ================================

# Email service provider (smtp, sendgrid, mailgun, ses)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yuyulolita.com

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key

# Email sender information
EMAIL_FROM_NAME=YuYu Lolita
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# ================================
# SMS CONFIGURATION
# ================================

# SMS provider (twilio, vonage, aws-sns)
SMS_PROVIDER=twilio

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# FILE STORAGE & UPLOADS
# ================================

# Storage provider (local, s3, cloudinary)
STORAGE_PROVIDER=local

# Local storage (development)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# File validation
ENABLE_FILE_VALIDATION=true
MAX_IMAGE_SIZE=5242880  # 5MB
MAX_DOCUMENT_SIZE=10485760  # 10MB

# AWS S3 (production)
AWS_S3_BUCKET=your-s3-bucket
AWS_S3_REGION=us-east-1
AWS_S3_ACCESS_KEY_ID=your-aws-access-key
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-key

# ================================
# REDIS (for caching & sessions)
# ================================

# Redis URL (optional, for production caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ================================
# EXTERNAL APIS
# ================================

# Currency exchange rate API
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/CNY
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key

# ================================
# BUSINESS CONFIGURATION
# ================================

# Default currency settings
DEFAULT_CURRENCY=RUB
DEFAULT_EXCHANGE_RATE=13.5

# Commission settings (these can be overridden in admin panel)
COMMISSION_LOW_THRESHOLD=100
COMMISSION_LOW_RATE=0.10
COMMISSION_STANDARD_THRESHOLD=1000
COMMISSION_STANDARD_RATE=0.15
COMMISSION_HIGH_FLAT_FEE=15

# Order processing
DEFAULT_PROCESSING_TIME_HOURS=120
DEFAULT_STORAGE_TIME_HOURS=336

# ================================
# SOCIAL MEDIA & CONTACT
# ================================

# Social media links
TELEGRAM_LINK=https://t.me/yuyulolita
VK_LINK=https://vk.com/yuyulolita
INSTAGRAM_LINK=https://instagram.com/yuyulolita

# Contact information
CONTACT_EMAIL=support@yourdomain.com
CONTACT_PHONE=+7-XXX-XXX-XX-XX

# ================================
# SECURITY FEATURES
# ================================

# Virus scanning
ENABLE_VIRUS_SCAN=false
VIRUS_SCAN_API_KEY=your-virus-scan-api-key

# Content Security Policy
CSP_ENABLED=true

# SSL/TLS settings (Production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
FORCE_HTTPS=false

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_BLOG=true
ENABLE_FAQ=true

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Система временно недоступна для обслуживания

# ================================
# MONITORING & LOGGING
# ================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn

# Health check
HEALTH_CHECK_ENABLED=true

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Debug mode (only for development)
DEBUG=false

# API documentation
ENABLE_SWAGGER=true
SWAGGER_TITLE=YuYu Lolita API
SWAGGER_VERSION=1.0.0

# Mock services (for development)
MOCK_SMS=true
MOCK_EMAIL=true
MOCK_PAYMENTS=true

# Database seeding
ENABLE_DB_SEED=false
RESET_DB_ON_START=false

# ================================
# WEBHOOKS
# ================================

# Webhook endpoints for external integrations
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# External webhook URLs
EXTERNAL_WEBHOOK_URL=https://your-external-service.com/webhook
PAYMENT_WEBHOOK_URL=https://your-payment-processor.com/webhook

# ================================
# ANALYTICS & TRACKING
# ================================

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Yandex Metrica
YANDEX_METRICA_ID=XXXXXXXX