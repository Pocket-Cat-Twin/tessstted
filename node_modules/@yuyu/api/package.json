{
  "name": "@yuyu/api",
  "version": "1.0.0",
  "description": "Elysia API backend for YuYu Lolita Shopping",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --hot src/index-db.ts",
    "dev-full": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "start": "bun dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "elysia": "^1.1.16",
    "@elysiajs/swagger": "^1.1.3",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/static": "^1.1.0",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/cookie": "^0.8.0",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.8",
    "@yuyu/shared": "workspace:*",
    "@yuyu/db": "workspace:*"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.4.2"
  }
}