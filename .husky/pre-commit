#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# PowerShell Scripts Validation
echo "Validating PowerShell scripts..."
bun run validate:powershell

# Check if validation passed
if [ $? -ne 0 ]; then
    echo "PowerShell validation failed. Commit aborted."
    echo "Run 'bun run fix:powershell' to auto-fix issues, then try again."
    exit 1
fi

echo "PowerShell validation passed."