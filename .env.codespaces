# GitHub Codespaces Configuration
# This file is specifically for GitHub Codespaces environment
# Original .env file remains untouched for Windows compatibility

# Database Configuration (Linux/Codespaces)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/yuyu_lolita

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Configuration (Codespaces)
API_PORT=3001
API_HOST=0.0.0.0

# Web App Configuration (Codespaces)
PUBLIC_API_URL=https://${CODESPACE_NAME}-3001.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}
WEB_PORT=5173
HOST=0.0.0.0

# Note: CODESPACE_NAME and GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN are automatically set by Codespaces

# Email Configuration (for user registration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yuyulolita.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp

# External APIs
CURRENCY_API_KEY=your-currency-api-key
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/CNY

# Environment
NODE_ENV=development
CORS_ORIGIN=https://${CODESPACE_NAME}-5173.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN},https://${CODESPACE_NAME}-3001.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN},http://localhost:5173,http://localhost:3001
SKIP_SEED=false

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Codespaces specific
CODESPACES=true