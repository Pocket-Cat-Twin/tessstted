# ================================
# YuYu Lolita Shopping System
# MySQL8 Environment Configuration Template
# ================================

# Copy this file to .env and fill in your actual values
# This template is specifically configured for MySQL8

# ================================
# APPLICATION SETTINGS
# ================================

# API Configuration
API_HOST=localhost
API_PORT=3001
CORS_ORIGIN=http://localhost:5173

# Web App Configuration
WEB_PORT=5173
HOST=0.0.0.0
PUBLIC_API_URL=http://localhost:3001

# ================================
# MYSQL8 DATABASE CONFIGURATION
# ================================

# MySQL8 Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=yuyu_lolita
DB_USER=root
DB_PASSWORD=

# MySQL Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_WAIT_FOR_CONNECTIONS=true
DB_QUEUE_LIMIT=0
DB_CHARSET=utf8mb4

# ================================
# AUTHENTICATION & SECURITY
# ================================

# JWT Secret (generate a strong random key)
JWT_SECRET=mysql-jwt-secret-change-in-production

# Environment
NODE_ENV=development
SKIP_SEED=false

# ================================
# EMAIL CONFIGURATION (Optional)
# ================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yuyulolita.com

# Email provider settings
EMAIL_FROM_NAME=YuYu Lolita Shopping
EMAIL_FROM_ADDRESS=noreply@yuyulolita.com

# ================================
# SMS CONFIGURATION (Optional)
# ================================

# SMS Provider (mock for development, sms.ru for production)
SMS_PROVIDER=mock
SMS_RU_API_ID=your-sms-ru-api-id
SMS_RU_API_KEY=your-sms-ru-api-key
SMS_RU_FROM=YuYuLolita

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Debug mode
DEBUG=false

# API documentation
ENABLE_SWAGGER=true

# Mock services for development
MOCK_SMS=true
MOCK_EMAIL=true