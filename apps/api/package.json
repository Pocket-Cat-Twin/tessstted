{
  "name": "@yuyu/api",
  "version": "1.0.0",
  "description": "Elysia API backend for YuYu Lolita Shopping",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --hot src/index-db.ts",
    "dev:windows": "$env:NODE_ENV='development'; bun --hot src/index-db.ts",
    "dev-full": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun --sourcemap=linked",
    "build:windows": "bun build src/index.ts --outdir=dist --target=bun --sourcemap=linked",
    "start": "bun dist/index.js",
    "start:windows": "bun dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist",
    "clean:windows": "if exist dist rmdir /s /q dist"
  },
  "dependencies": {
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.1.0",
    "@elysiajs/jwt": "^1.1.1",
    "@elysiajs/static": "^1.1.0",
    "@elysiajs/swagger": "^1.1.3",
    "@yuyu/db": "workspace:*",
    "@yuyu/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "elysia": "^1.1.16",
    "nodemailer": "^6.9.8",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.3",
    "bun-types": "latest",
    "supertest": "^7.1.4",
    "typescript": "^5.4.2",
    "vitest": "^3.2.4"
  }
}
