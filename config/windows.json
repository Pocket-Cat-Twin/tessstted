{
  "database": {
    "host": "localhost",
    "port": 3306,
    "defaultDatabase": "yuyu_lolita",
    "adminDatabase": "mysql",
    "windowsServiceName": "MySQL80",
    "defaultUser": "root",
    "connectionTimeout": 10000,
    "retryAttempts": 5,
    "retryDelay": 2000,
    "charset": "utf8mb4"
  },
  "api": {
    "host": "localhost",
    "port": 3001,
    "cors": "http://localhost:5173",
    "environment": "development",
    "logLevel": "info",
    "maxRequestSize": "10mb",
    "timeout": 30000
  },
  "web": {
    "host": "localhost", 
    "port": 5173,
    "apiUrl": "http://localhost:3001",
    "environment": "development"
  },
  "windows": {
    "powershellExecutionPolicy": "RemoteSigned",
    "requiredServices": [
      "MySQL80",
      "MySQL57",
      "MySQL"
    ],
    "firewallPorts": [3001, 5173, 3306],
    "recommendedExclusions": [
      "node_modules",
      "dist",
      "build",
      ".bun",
      "logs"
    ],
    "paths": {
      "logs": "logs",
      "uploads": "uploads",
      "temp": "%TEMP%\\yuyu-lolita",
      "data": "%APPDATA%\\yuyu-lolita",
      "mysql": "%PROGRAMFILES%\\MySQL\\MySQL Server 8.0"
    }
  },
  "security": {
    "bcryptRounds": 12,
    "jwtExpiresIn": "7d",
    "rateLimiting": {
      "windowMs": 900000,
      "maxRequests": 100,
      "authMaxRequests": 10
    },
    "cors": {
      "credentials": true,
      "optionsSuccessStatus": 200
    }
  },
  "development": {
    "hotReload": true,
    "autoOpenBrowser": true,
    "clearConsole": false,
    "showErrorOverlay": true,
    "sourceMaps": true
  },
  "production": {
    "compress": true,
    "minify": true,
    "sourceMaps": false,
    "logLevel": "warn",
    "cluster": false,
    "processTitle": "yuyu-lolita"
  }
}