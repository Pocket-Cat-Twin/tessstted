{
  "name": "@lolita-fashion/db",
  "version": "1.0.0",
  "description": "Native MySQL8 database layer for Lolita Fashion project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "if exist dist rmdir /s /q dist",
    "clean:windows": "if exist dist rmdir /s /q dist",
    "migrate": "npx tsx src/migrate.ts",
    "migrate:mysql": "npx tsx src/migrate.ts",
    "migrate:windows": "npx tsx src/migrate.ts",
    "setup": "npm run migrate",
    "setup:mysql": "npm run migrate",
    "setup:windows": "npm run migrate",
    "seed": "npx tsx src/seed-users.ts",
    "seed:users": "npx tsx src/seed-users.ts",
    "seed:windows": "npx tsx src/seed-users.ts",
    "setup:complete": "npm run migrate && npm run seed:users",
    "setup:complete:windows": "npm run migrate:windows && npm run seed:windows",
    "test": "npx tsx src/connection.ts",
    "test:mysql": "npx tsx src/connection.ts",
    "health": "npx tsx src/health-check.ts",
    "health:mysql": "npx tsx src/health-check.ts"
  },
  "dependencies": {
    "@lolita-fashion/shared": "*",
    "dotenv": "^16.4.5",
    "mysql2": "^3.11.0"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "typescript": "^5.4.2"
  }
}
