{
  "name": "@lolita-fashion/db",
  "version": "1.0.0",
  "description": "Native MySQL8 database layer for Lolita Fashion project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "if exist dist rmdir /s /q dist",
    "clean:windows": "if exist dist rmdir /s /q dist",
    "migrate": "bun run src/migrate.ts",
    "migrate:mysql": "bun run src/migrate.ts",
    "migrate:windows": "bun run src/migrate.ts", 
    "setup": "bun run migrate",
    "setup:mysql": "bun run migrate",
    "setup:windows": "bun run migrate",
    "seed": "bun run src/seed-users.ts",
    "seed:users": "bun run src/seed-users.ts", 
    "seed:windows": "bun run src/seed-users.ts",
    "setup:complete": "bun run migrate && bun run seed:users",
    "setup:complete:windows": "bun run migrate:windows && bun run seed:windows",
    "test": "bun run src/connection.ts",
    "test:mysql": "bun run src/connection.ts",
    "health": "bun run src/health-check.ts",
    "health:mysql": "bun run src/health-check.ts"
  },
  "dependencies": {
    "mysql2": "^3.11.0",
    "@lolita-fashion/shared": "*"
  },
  "devDependencies": {
    "typescript": "^5.4.2"
  }
}
