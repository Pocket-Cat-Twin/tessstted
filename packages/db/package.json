{
  "name": "@yuyu/db",
  "version": "1.0.0",
  "description": "Database schema and utilities for YuYu Lolita project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "drizzle-kit generate:pg",
    "migrate": "bun run src/migrate.ts",
    "migrate:windows": "bun run src/migrate.ts",
    "seed": "bun run src/seed.ts",
    "seed:windows": "bun run src/seed.ts",
    "studio": "drizzle-kit studio",
    "setup:windows": "bun run src/setup-windows.ts",
    "clean": "rm -rf dist",
    "clean:windows": "if exist dist rmdir /s /q dist"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.3",
    "@yuyu/shared": "workspace:*"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.8",
    "typescript": "^5.4.2",
    "@types/pg": "^8.10.9"
  }
}
