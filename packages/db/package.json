{
  "name": "@lolita-fashion/db",
  "version": "1.0.0",
  "description": "Database schema and utilities for Lolita Fashion project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "drizzle-kit generate:pg",
    "migrate": "bun run src/migrate.ts",
    "migrate:windows": "bun run src/migrate.ts",
    "seed": "bun run src/seed.ts",
    "seed:windows": "bun run src/seed.ts",
    "validate-schema": "bun run src/schema-validator.ts",
    "studio": "drizzle-kit studio",
    "setup:windows": "bun run src/setup-windows.ts",
    "clean": "if exist dist rmdir /s /q dist",
    "clean:windows": "if exist dist rmdir /s /q dist",
    "test": "bun run src/connection.ts",
    "health": "node -e \"import('./src/health-monitor.js').then(m => m.checkDatabaseHealth()).then(console.log)\"",
    "diagnose": "node -e \"import('./src/windows-diagnostics.js').then(m => m.runWindowsDiagnostics()).then(m.displayDiagnosticReport)\"",
    "monitor": "node -e \"import('./src/health-monitor.js').then(m => m.startHealthMonitoring(30000))\"",
    "doctor": "powershell -File ../../scripts/db-doctor.ps1",
    "emergency": "node -e \"import('./src/health-monitor.js').then(m => m.runEmergencyRecovery()).then(console.log)\"",
    "reset": "bun run src/database-reset.ts",
    "reset:full": "bun run src/database-reset.ts",
    "validate": "bun run src/schema-validator.ts",
    "validate:schema": "bun run src/schema-validator.ts",
    "fix": "bun run reset && bun run validate",
    "setup:complete": "bun run reset && bun run validate && echo \"✅ База данных полностью настроена!\"",
    "troubleshoot": "bun run validate && bun run test"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.3",
    "@lolita-fashion/shared": "workspace:*"
  },
  "devDependencies": {
    "drizzle-kit": "^0.20.8",
    "typescript": "^5.4.2",
    "@types/pg": "^8.10.9"
  }
}
