{
  "name": "lolita-fashion",
  "version": "1.0.0",
  "description": "Lolita Fashion Shopping website - modern stack migration",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "dev:windows": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "dev:auto": "node scripts/auto-start.js",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-windows.ps1",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup-windows.ps1",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/start-prod.ps1",
    "start:windows": "powershell -ExecutionPolicy Bypass -File scripts/start-prod.ps1",
    "build": "powershell -ExecutionPolicy Bypass -File scripts/build-windows.ps1",
    "build:api": "cd apps/api && bun run build:windows",
    "build:web": "cd apps/web && bun run build",
    "build:windows": "powershell -ExecutionPolicy Bypass -File scripts/build-windows.ps1",
    "db:migrate": "cd packages/db && bun run migrate",
    "db:migrate:mysql": "cd packages/db && bun run migrate:mysql",
    "db:migrate:windows": "cd packages/db && bun run migrate:windows",
    "db:setup": "cd packages/db && bun run setup",
    "db:setup:mysql": "cd packages/db && bun run setup:mysql",
    "db:setup:windows": "cd packages/db && bun run setup:windows",
    "db:test": "cd packages/db && bun run test",
    "db:test:mysql": "cd packages/db && bun run test:mysql",
    "db:health": "cd packages/db && bun run health",
    "db:health:mysql": "cd packages/db && bun run health:mysql",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js,.svelte --fix",
    "lint:check": "eslint . --ext .ts,.js,.svelte",
    "type-check": "(cd apps/web && bun run check) && (cd apps/api && bun run type-check)",
    "validate:powershell": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1",
    "fix:powershell": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Fix",
    "validate:powershell:strict": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Strict",
    "validate:powershell:report": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Report",
    "validate:modules": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Path scripts",
    "validate:modules:fix": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Path scripts -Fix",
    "test:powershell": "powershell -ExecutionPolicy Bypass -Command \"Write-Host '[TEST] Testing PowerShell module system...' -ForegroundColor Cyan; Import-Module ./scripts/PowerShell-Common.psd1 -Force; Write-Host '[SUCCESS] PowerShell module system working correctly!' -ForegroundColor Green\"",
    "validate:enterprise": "bun run validate:powershell:strict && bun run validate:modules && bun run lint:check && bun run type-check",
    "validate:all": "bun run validate:powershell && bun run lint:check && bun run type-check",
    "validate": "bun run lint:check && bun run type-check && bun run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-svelte": "^2.35.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "svelte-eslint-parser": "^0.33.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3"
  }
}
