{
  "name": "lolita-fashion",
  "version": "1.0.0",
  "description": "Lolita Fashion Shopping website - modern stack migration",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "dev:windows": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "dev:codespaces": "npm run build:shared && npm run start:services",
    "dev:auto": "node scripts/auto-start.js",
    "setup": "powershell -ExecutionPolicy Bypass -File scripts/setup-windows.ps1",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup-windows.ps1",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/start-prod.ps1",
    "start:windows": "powershell -ExecutionPolicy Bypass -File scripts/start-prod.ps1",
    "start:api:npm": "cd apps/api && npm run dev:npm",
    "start:web:npm": "cd apps/web && npm run dev",
    "start:services": "concurrently \"npm run start:api:npm\" \"npm run start:web:npm\"",
    "build": "powershell -ExecutionPolicy Bypass -File scripts/build-windows.ps1",
    "build:api": "cd apps/api && bun run build:windows",
    "build:web": "cd apps/web && bun run build",
    "build:shared": "cd packages/shared && npm run build",
    "build:windows": "powershell -ExecutionPolicy Bypass -File scripts/build-windows.ps1",
    "db:migrate": "cd packages/db && bun run migrate",
    "db:migrate:mysql": "cd packages/db && bun run migrate:mysql",
    "db:migrate:windows": "cd packages/db && bun run migrate:windows",
    "db:setup": "cd packages/db && bun run setup",
    "db:setup:mysql": "cd packages/db && bun run setup:mysql",
    "db:setup:windows": "cd packages/db && bun run setup:windows",
    "db:seed": "cd packages/db && bun run seed:users",
    "db:seed:users": "cd packages/db && bun run seed:users",
    "db:seed:windows": "cd packages/db && bun run seed:windows",
    "db:setup:complete": "cd packages/db && bun run setup:complete",
    "db:setup:complete:windows": "cd packages/db && bun run setup:complete:windows",
    "db:setup:full:windows": "powershell -ExecutionPolicy Bypass -File scripts/db-setup-complete-windows.ps1",
    "db:setup:simple:windows": "powershell -ExecutionPolicy Bypass -File scripts/db-setup-simple-windows.ps1",
    "db:check:windows": "powershell -ExecutionPolicy Bypass -File scripts/db-environment-check-windows.ps1",
    "db:check:fix:windows": "powershell -ExecutionPolicy Bypass -File scripts/db-environment-check-windows.ps1 -Fix",
    "test:powershell:syntax": "powershell -ExecutionPolicy Bypass -File scripts/test-windows-syntax.ps1",
    "db:test": "cd packages/db && bun run test",
    "db:test:mysql": "cd packages/db && bun run test:mysql",
    "db:health": "cd packages/db && bun run health",
    "db:health:mysql": "cd packages/db && bun run health:mysql",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.js,.svelte --fix",
    "lint:check": "eslint . --ext .ts,.js,.svelte",
    "type-check": "(cd apps/web && bun run check) && (cd apps/api && bun run type-check)",
    "validate:powershell": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1",
    "fix:powershell": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Fix",
    "validate:powershell:strict": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Strict",
    "validate:powershell:report": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Report",
    "validate:modules": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Path scripts",
    "validate:modules:fix": "powershell -ExecutionPolicy Bypass -File scripts/Validate-PowerShell.ps1 -Path scripts -Fix",
    "test:powershell": "powershell -ExecutionPolicy Bypass -Command \"Write-Host '[TEST] Testing PowerShell module system...' -ForegroundColor Cyan; Import-Module ./scripts/PowerShell-Common.psd1 -Force; Write-Host '[SUCCESS] PowerShell module system working correctly!' -ForegroundColor Green\"",
    "test:powershell:integration": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1",
    "test:powershell:common": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1 -TestSuites @('Common')",
    "test:powershell:environment": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1 -TestSuites @('Environment')",
    "test:powershell:build": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1 -TestSuites @('Build')",
    "test:powershell:setup": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1 -TestSuites @('Setup')",
    "test:powershell:all": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1 -TestSuites @('Common','Environment','Build','Setup')",
    "test:powershell:network": "powershell -ExecutionPolicy Bypass -File scripts/Test-PowerShellScripts.ps1 -TestSuites @('Common') -SkipNetworkTests:$false",
    "validate:enterprise": "bun run test:powershell:integration && bun run validate:powershell:strict && bun run validate:modules && bun run lint:check && bun run type-check",
    "validate:enterprise:full": "bun run test:powershell:all && bun run validate:powershell:report && bun run db:check:windows && bun run lint:check && bun run type-check",
    "validate:all": "bun run test:powershell:integration && bun run validate:powershell && bun run lint:check && bun run type-check",
    "validate": "bun run lint:check && bun run type-check && bun run build",
    "setup:enterprise:windows": "bun run db:check:fix:windows && bun run db:setup:full:windows && bun run test:powershell:integration",
    "build:enterprise:windows": "bun run test:powershell:build && bun run build:windows && bun run validate:enterprise",
    "deploy:prepare:windows": "bun run validate:enterprise:full && bun run build:enterprise:windows"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-svelte": "^2.35.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "svelte-eslint-parser": "^0.33.0",
    "typescript": "^5.4.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "mysql2": "^3.14.3"
  }
}
