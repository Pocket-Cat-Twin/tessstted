{
  "name": "yuyu-lolita-v2",
  "version": "1.0.0",
  "description": "YuYu Lolita Shopping website - modern stack migration",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --filter=@yuyu/api dev & bun --filter=@yuyu/web dev",
    "dev:windows": "start \"API Server\" cmd /k \"cd apps/api && bun run dev:windows\" && start \"Web App\" cmd /k \"cd apps/web && bun run dev:windows\"",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup-windows.ps1",
    "start:windows": "powershell -ExecutionPolicy Bypass -File scripts/start-prod.ps1",
    "build": "bun run build:api && bun run build:web",
    "build:api": "bun --filter=@yuyu/api build",
    "build:web": "bun --filter=@yuyu/web build",
    "build:windows": "bun run build:api && bun run build:web",
    "start": "bun --filter=@yuyu/api start & bun --filter=@yuyu/web start",
    "db:generate": "bun --filter=@yuyu/db generate",
    "db:migrate": "bun --filter=@yuyu/db migrate",
    "db:migrate:windows": "bun --filter=@yuyu/db migrate:windows",
    "db:seed": "bun --filter=@yuyu/db seed",
    "db:seed:windows": "bun --filter=@yuyu/db seed:windows",
    "db:setup:windows": "bun --filter=@yuyu/db setup:windows",
    "lint": "eslint . --ext .ts,.svelte",
    "format": "prettier --write .",
    "type-check": "bun --filter=@yuyu/web check && bun --filter=@yuyu/api type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "typescript": "^5.4.2"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  }
}
